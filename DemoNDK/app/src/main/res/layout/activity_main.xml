<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/base_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="mainBtnClick"
            android:text="基础类型" />

        <Button
            android:id="@+id/string_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="mainBtnClick"
            android:text="字符串类型" />

        <Button
            android:id="@+id/array_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="mainBtnClick"
            android:text="数组类型" />

        <Button
            android:id="@+id/filed_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="mainBtnClick"
            android:text="JNI访问Java类字段" />

        <Button
            android:id="@+id/method_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="mainBtnClick"
            android:text="JNI访问Java类方法" />

        <Button
            android:id="@+id/construct_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="mainBtnClick"
            android:text="JNI访问Java构造方法" />

        <Button
            android:id="@+id/jni_onLoad_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="mainBtnClick"
            android:text="JNI的onLoad方法" />

        <Button
            android:id="@+id/jni_callback_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="mainBtnClick"
            android:text="JNI回调及子线程回调Java方法" />

        <Button
            android:id="@+id/jni_reference_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="mainBtnClick"
            android:text="JNI引用类型" />

        <Button
            android:id="@+id/jni_exception_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="mainBtnClick"
            android:text="JNI中异常处理" />

        <Button
            android:id="@+id/jni_thread_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="mainBtnClick"
            android:text="JNI中线程操作" />

    </LinearLayout>

</ScrollView>