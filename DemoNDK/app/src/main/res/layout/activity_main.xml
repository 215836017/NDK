<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/base_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="mainBtnClick"
            android:text="基础类型" />

        <Button
            android:id="@+id/string_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="mainBtnClick"
            android:text="字符串类型" />

        <Button
            android:id="@+id/array_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="mainBtnClick"
            android:text="数组类型" />

        <Button
            android:id="@+id/filed_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="mainBtnClick"
            android:text="JNI访问Java类字段" />

        <Button
            android:id="@+id/method_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="mainBtnClick"
            android:text="JNI访问Java类方法" />

        <Button
            android:id="@+id/construct_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="mainBtnClick"
            android:text="JNI访问Java构造方法" />

    </LinearLayout>

</ScrollView>